@model AsyncInn.Models.HotelRoom

@{
    ViewData["Title"] = "Edit";

    Layout = "_HomeLayout";
}

<h1>Edit</h1>

<h4>Hotel Rooms</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HotelID" />
            <input type="hidden" asp-for="RoomNumberID" />
            <div class="form-group">
                <label asp-for="RoomID" class="control-label">Room Name</label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" required/>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PetFriendly" /> Pet Friendly
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

