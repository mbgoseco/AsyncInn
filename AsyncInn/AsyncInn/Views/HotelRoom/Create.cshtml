@model AsyncInn.Models.HotelRoom

@{
    ViewData["Title"] = "Create";

    Layout = "_HomeLayout";
}

<h1>Create</h1>

<h4>Hotel Rooms</h4>
<hr />
@{ 
    if (!ViewData["errorMsg"].Equals(""))
    {
        <p>@ViewData["errorMsg"]</p>
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HotelID" class="control-label">Hotel Name</label>
                <select asp-for="HotelID" class ="form-control" asp-items="ViewBag.HotelID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoomNumberID" class="control-label">Room Number</label>
                <input asp-for="RoomNumberID" class="form-control" required/>
                <span asp-validation-for="RoomNumberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label">Room Name</label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" required/>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PetFriendly" /> Pet Friendly
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

